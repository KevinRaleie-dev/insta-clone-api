datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Post {
    id        String   @id @default(cuid())
    image_url String
    caption   String
    user      User     @relation(fields: [userId], references: [id])
    userId    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Relations {
    id          String  @id @default(cuid())
    followed_id String?
    follower_id String?
}

model User {
    id        String   @id @default(cuid())
    username  String
    email     String   @unique
    password  String
    profile   Profile?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    posts     Post[]
}

model Profile {
    id     String @id @default(cuid())
    bio    String
    User   User   @relation(fields: [userId], references: [id])
    userId String @unique
}
