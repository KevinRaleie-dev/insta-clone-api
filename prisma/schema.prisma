datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        String   @id @default(cuid())
    username  String
    email     String   @unique
    password  String
    profile   Profile?
    followers String[] 
    following String[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Profile {
    id     String @id @default(cuid())
    bio    String
    User   User   @relation(fields: [userId], references: [id])
    userId String @unique
}
